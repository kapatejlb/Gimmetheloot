@model GimmeTheLoot.Models.Project
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Edit";
    var AllowedCategories = new List<string>() { "Arts", "Comics & Illustration", "Design & Tech", "Film", "Food & Craft", "Games", "Publishing" };
}

<h1>@Localizer["Edit"]</h1>
@Html.Partial("_Project")
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <p>@Localizer["Title"]</p>
            <div class="form-group" style="width: 500px;">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <p>@Localizer["Categories"]</p>
            <select asp-for="Subject" style="width: 500px">
                @foreach (var value in AllowedCategories)
                {
                    <option value="@value">@value</option>
                }

            </select>

            <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
            <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>

            <p></p>
            <p>@Localizer["Content"]</p>
            <textarea id="ContentText" name="ContentText" style="width: 300%">@Model.Content.Text</textarea>

            <p>@Localizer["Created"]</p>
            <div class="form-group">
                <input asp-for="Created" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>

            <p>@Localizer["Expiration Date"]</p>
            <div class="form-group">
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


