@model IEnumerable<GimmeTheLoot.Models.AspNetUser>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@if (Model.Count() == 0)
{
    <div class="alert alert-info">
        @Localizer["No User found"]
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Localizer["UserName"]</td>
                <td>@Localizer["PhoneNumber"]</td>
                <td>@Localizer["PhoneNumberConfirmed"]</td>
                <td>@Localizer["AccessFailedCount"]</td>
                <td>@Localizer["TwoFactorEnabled"]</td>
                <td>@Localizer["EmailConfirmed"]</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumberConfirmed)</td>
                    <td>@Html.DisplayFor(modelItem => item.AccessFailedCount)</td>
                    <td>@Html.DisplayFor(modelItem => item.TwoFactorEnabled)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmailConfirmed)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a>
                        <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@Html.Partial("_UsersPagedList")