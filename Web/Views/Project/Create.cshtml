@model Data.ViewModels.ViewModels.ProjectViewModel

@{
    ViewData["Title"] = "Create";
    var AllowedCategories = new List<string>() { "Arts", "Comics & Illustration", "Design & Tech", "Film", "Food & Craft", "Games", "Publishing" };
}

<h1>Create Project</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            @*<input asp-for="Id" hidden="" class="form-control" />*@

            <div class="form-group" style="width: 500px;">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <p>Categories</p>
            <select asp-for="Subject" style="width: 500px">
                @foreach (var value in AllowedCategories)
                {
                    <option value="@value">@value</option>
                }

            </select>

            @*<script>
                function getSelectedValue() {
                    var selectedValue = document.getElementById("choose-subject").value;
                    alert(selectedValue.value);
                    }
            </script>*@
            
                    
            <p></p>
            <p>Content</p>
            <textarea id="MyID" name="Content"></textarea>

            <div class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>

            <p>Expiration Date</p>
            <div class="form-group">
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            <input hidden name ="UserName" value="@User.Identity.Name" ></input>



        </form>
    </div>
</div>


